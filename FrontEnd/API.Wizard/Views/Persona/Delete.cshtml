@model API.Wizard.Models.Persona

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Seguro que desea eliminar a la persona?</h3>
<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Primer Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PriApellido)
        </dd>
        <dt class="col-sm-2">
            Segundo Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeguApellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            Proyecto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
        <dt class="col-sm-2">
            Puesto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clave)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPer" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
