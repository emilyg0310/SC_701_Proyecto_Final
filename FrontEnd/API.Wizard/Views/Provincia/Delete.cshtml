@model API.Wizard.Models.Provincia

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Seguro que desea eliminar la provincia?</h3>
<div>
    <h4>Provincia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Provincia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProvincia)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodigoProvincia" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
