@model API.Wizard.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdClie" class="control-label">Cédula</label>
                <input asp-for="IdClie" class="form-control" />
                <span asp-validation-for="IdClie" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="PriApellido" class="control-label">Primer Apellido</label>
                <input asp-for="PriApellido" class="form-control" />
                <span asp-validation-for="PriApellido" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="SeguApellido" class="control-label">Segundo Apellido</label>
                <input asp-for="SeguApellido" class="form-control" />
                <span asp-validation-for="SeguApellido" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Correo</label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Direccion" class="control-label">Direccion</label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CodigoCanton" class="control-label">Cantón</label>
                <select asp-for="CodigoCanton" class="form-control" asp-items="ViewBag.CodigoCanton"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
