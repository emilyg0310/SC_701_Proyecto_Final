@model API.Wizard.Models.Materiales

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Materiales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMaterial" />
            <div class="form-group">
                <label asp-for="NombreMaterial" class="control-label">Material</label>
                <input asp-for="NombreMaterial" class="form-control" />
                <span asp-validation-for="NombreMaterial" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CantiMetro" class="control-label">Cantidad de metros</label>
                <input asp-for="CantiMetro" class="form-control" />
                <span asp-validation-for="CantiMetro" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
