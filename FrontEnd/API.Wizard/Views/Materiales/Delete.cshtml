@model API.Wizard.Models.Materiales

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Seguro que desea eliminar el material?</h3>
<div>
    <h4>Materiales</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Material
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreMaterial)
        </dd>
        <dt class="col-sm-2">
            Cantidad de metros
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantiMetro)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMaterial" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
