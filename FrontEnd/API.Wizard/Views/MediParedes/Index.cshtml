@model IEnumerable<API.Wizard.Models.MediParedes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalAlto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAncho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalMetroCuadrado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAlto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAncho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalMetroCuadrado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdMedParedes">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdMedParedes">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdMedParedes">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
